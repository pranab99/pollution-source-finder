# WeatherAPI.com API key
# Get it from: https://www.weatherapi.com/
WEATHER_API_KEY=your_weatherapi_key_here

# OpenWeatherMap API key (fallback)
# Get it from: https://openweathermap.org/api
OPEN_WEATHER_API_KEY=your_openweather_key_here

# World Air Quality Index (WAQI) API key
# Get it from: https://waqi.info/api
IQAIR_API_KEY=your_iqair_key_here

# NewsAPI.org API key (for pollution news)
# Get it from: https://newsapi.org/
# Free tier: 100 requests/day
NEWS_API_KEY=your_newsapi_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
